{
	"manifest_version": 2,
	"name": "Selected Text Translator",
	"version": "0.1",
	"content_scripts": [{
		"matches": [
			"<all_urls>"
		],
		"js": ["content/main.js"]
	}],
	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html",
		"default_title": "A popup"
	},
	"web_accessible_resources": ["translator_popup.html", "translator_popup.css"]
}